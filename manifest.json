{
	"manifest_version": 2,
	"name": "Lyrical",
	"version": "0.2.0",
	"description": "Instantly get lyrics for songs on Youtube and Google Play Music",

	"permissions": [
		"activeTab", "*://play.google.com/music/*", "*://www.youtube.com/watch*",
		"*://youtube.com/*", "*://*.genius.com/*", "*://genius.com/*", "storage"
	],

	"content_scripts" : [
		{
			"matches" : [
				"https://play.google.com/music/listen*"
			],

			"js" : [
				"libs/jquery-3.1.1.min.js", "libs/interact.min.js", "scripts/content_compiled/resize_drag.js", "scripts/content_compiled/play_music.js"
			]
		},

		{
			"matches" : [
				"*://www.youtube.com/*",
				"*://youtube.com/*"
			],

			"js" : [
				"libs/jquery-3.1.1.min.js", "libs/interact.min.js", "scripts/content_compiled/resize_drag.js", "scripts/content_compiled/youtube.js"
			]
		}
	],


	"browser_action": {
		"default_popup": "ui/popup.html",
		"default_title": "Lyrical",
		"default_icon":	"img/icon.png"
	},

	"icons" : {
		"16" : "img/icon.png",
		"48" : "img/icon.png",
		"128" : "img/icon.png"
	},

	"options_ui" : {
		"page" : "ui/options.html",
		"chrome_style" : true
	},

	"background": {
		"scripts": [
			"libs/jquery-3.1.1.min.js", "scripts/background/background.js"
		]
	},

	"web_accessible_resources" : [
		"img/*.png"
	]
}