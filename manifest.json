{
	"manifest_version": 2,
	"name": "Lyrical",
	"version": "0.5.2",
	"description": "Instantly get lyrics for songs on Youtube, Google Play Music, and Spotify Web Player",

	"permissions": [
		"activeTab", "*://play.google.com/music/*", "*://www.youtube.com/watch*",
		"*://youtube.com/*", "*://*.genius.com/*", "*://genius.com/*", "storage",
		"*://open.spotify.com/*", "*://www.open.spotify.com/*", "unlimitedStorage"
	],

	"content_scripts" : [
		{
			"matches" : [
				"https://play.google.com/music/listen*"
			],

			"js" : [
				"libs/jquery-3.1.1.min.js", "libs/jquery-ui.min.js", "src/compiled/play_music.js",
				"libs/lz-string.min.js"
			],

			"css" : [
				"libs/jquery-ui.min.css", "src/compiled/panel.min.css"
			]
		},

		{
			"matches" : [
				"*://www.youtube.com/*",
				"*://youtube.com/*"
			],

			"js" : [
				"libs/jquery-3.1.1.min.js", "libs/jquery-ui.min.js", "src/compiled/youtube.js",
				"libs/lz-string.min.js"
			],

			"css" : [
				"libs/jquery-ui.min.css", "src/compiled/panel.min.css"
			]
		},

		{
			"matches" : [
				"*://www.open.spotify.com/*",
				"*://open.spotify.com/*"
			],

			"js" : [
				"libs/jquery-3.1.1.min.js", "libs/jquery-ui.min.js", "src/compiled/spotify.js",
				"libs/lz-string.min.js"
			],

			"css" : [
				"libs/jquery-ui.min.css", "src/compiled/panel.min.css"
			]
		}

	],


	"browser_action": {
		"default_popup": "src/ui/popup.html",
		"default_title": "Lyrical",
		"default_icon":	"src/img/icon.png"
	},

	"icons" : {
		"16" : "src/img/icon.png",
		"48" : "src/img/icon.png",
		"128" : "src/img/icon.png"
	},

	"options_ui" : {
		"page" : "src/ui/options.html",
		"chrome_style" : true
	},

	"background": {
		"scripts": [
			"src/compiled/background.js"
		]
	},

	"web_accessible_resources" : [
		"src/img/*.png",
		"src/img/*.gif",
		"src/ui/options.html"
	]
}