{
	"manifest_version": 2,
	"name": "Lyrical",
	"version": "0.2",

	"permissions": [
		"activeTab", "*://play.google.com/music/*", "*://www.youtube.com/watch*",
		"*://youtube.com/*", "*://api.genius.com/*", "*://genius.com/*"
	],

	"content_scripts" : [
		{
			"matches" : [
				"https://play.google.com/music/*"
			],

			"js" : [
				"libs/jquery-3.1.1.min.js", "scripts/content_compiled/play_music.js"
			]
		},

		{
			"matches" : [
				"*://www.youtube.com/*",
				"*://youtube.com/*"
			],

			"js" : [
				"libs/jquery-3.1.1.min.js", "scripts/content_compiled/youtube.js"
			]
		}
	],


	"browser_action": {
		"default_popup": "ui/popup.html",
		"default_title": "Lyrical",
		"default_icon":	"img/icon.png"
	},

	"background": {
		"scripts": [
			"libs/jquery-3.1.1.min.js", "scripts/background/background.js"
		]
	}
}